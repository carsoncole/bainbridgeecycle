= form_for @pickup do |f|
  - if @pickup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pickup.errors.count, "error")} prohibited this pickup from being saved:"
      %ul
        - @pickup.errors.full_messages.each do |message|
          %li= message
  .form-group
    .field
      %label
        = f.label :name
      = f.text_field :name, class: 'form-control'
  .form-group
    .field
      = f.label :email
      = f.text_field :email, class: 'form-control'
  .form-group
    .field
      = f.label :street_address
      = f.text_field :street_address, class: 'form-control'
  .form-group
    .field
      = f.label :message
      = f.text_area :message, class: 'form-control'

  - if cookies[:user]
    .form-group
      .field
        = f.label :driver
        = f.collection_select :driver_id, Driver.all, :id, :name, include_blank: 'Select driver ... '
  .actions
    = f.submit 'Save', class: 'btn btn-lg btn-primary'
