= form_for @pickup do |f|
  - if @pickup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pickup.errors.count, "error")} prohibited this pickup from being saved:"
      %ul
        - @pickup.errors.full_messages.each do |message|
          %li= message
  .form-group
    .field
      %label
        = f.label :name
      = f.text_field :name, class: 'form-control'
  .form-group
    .field
      = f.label :email
      = f.text_field :email, class: 'form-control'
  .form-group
    .field
      = f.label :street_address
      = f.text_field :street_address, class: 'form-control', placeholder: 'Bainbridge Island street address'
  .form-group
    .field
      = f.label :How_heavy_is_your_ewaste?
      = f.select :size, options_for_select(Pickup::SIZES), {}, class: 'form-control'
  .form-group
    .field
      = f.label :message
      = f.text_area :message, class: 'form-control', placeholder: "Anything else you'd like to tell us?"

  - if signed_in?
    .form-group
      .field
        = f.label :driver
        = f.collection_select :driver_id, Driver.all, :id, :name, include_blank: 'Select driver ... ', class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-lg btn-primary'
