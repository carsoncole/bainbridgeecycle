.container-fluid
  %h1 Pickups

  %table.table.table-sm
    %thead
      %tr
        %th Name
        %th Email
        %th Street address
        %th Driver
        %th Size
        %th

    %tbody
      - @pickups.each do |pickup|
        %tr
          %td= pickup.name
          %td= pickup.email
          %td= pickup.street_address
          %td
            = pickup.driver.name if pickup.driver
            = form_for pickup do |f|
              = f.collection_select :driver_id, Driver.all, :id, :name

          %td= pickup.size
          %td
            = link_to 'Show', pickup
            = '|'
            = link_to 'Edit', edit_pickup_path(pickup)
            = '|'
            = link_to 'Destroy', pickup, method: :delete, data: { confirm: 'Are you sure?' }


    = submit_tag

  %br

  = paginate @pickups


  = link_to 'New Pickup', new_pickup_path
