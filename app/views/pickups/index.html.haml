.container-fluid
  %h1 Pickups

  .table-responsive
    %table.table.table-sm
      %thead
        %tr
          %th Name
          %th Email
          %th Street address
          %th Driver
          %th Size
          %th Created
          %th

      %tbody
        - @pickups.each do |pickup|
          %tr
            %td= pickup.name
            %td= pickup.email
            %td= pickup.street_address
            %td
              - if pickup.driver
                = pickup.driver.name if pickup.driver
              - else
                = link_to 'Assign', edit_pickup_path(pickup)


            %td= pickup.size
            %td= nice_date_time(pickup.created_at)
            %td
              = link_to 'Show', pickup
              = '|'
              = link_to 'Edit', edit_pickup_path(pickup)
              = '|'
              = link_to 'Destroy', pickup, method: :delete, data: { confirm: 'Are you sure?' }


  %br

  = paginate @pickups


  = link_to 'New Pickup', new_pickup_path
