.container
  .row
    .col-md-1
    .col-md-10
      %h1 Settings
      %br
      %p.text-muted * It is important to fill this out completely as the information is used on the website and in email notifications.
      .table-responsive
        %table.table.settings
          %tbody
            %tr
              %th Dropoffs start at:
              %td.text-right= @setting.dropoffs_start_at
            %tr
              %th Dropoffs end at:
              %td.text-right= @setting.dropoffs_end_at
            %tr
              %th Pickup instructions:
              %td.text-right= @setting.pickup_instructions
            %tr
              %th Pickup signups enabled:
              %td.text-right
                - if @setting.pickup_signups_enabled
                  .font-weight-bold.text-success= "&#10003".html_safe
                - else
                  .font-weight-bold.text-danger= "&#x2717".html_safe
            %tr
              %th Pickups start at:
              %td.text-right= @setting.pickups_start_at
            %tr
              %th Pickups end at:
              %td.text-right= @setting.pickups_end_at
            %tr
              %th Donations enabled:
              %td.text-right
                - if @setting.donations_enabled
                  .font-weight-bold.text-success= "&#10003".html_safe
                - else
                  .font-weight-bold.text-danger= "&#x2717".html_safe
            %tr
              %th Allow user signups:
              %td.text-right
                - if @setting.allow_user_signups
                  .font-weight-bold.text-success= "&#10003".html_safe
                - else
                  .font-weight-bold.text-danger= "&#x2717".html_safe
            %tr
              %th General contact name:
              %td.text-right= @setting.general_contact_name
            %tr
              %th General contact email:
              %td.text-right= @setting.general_contact_email
            %tr
              %th Pickup contact name:
              %td.text-right= @setting.pickup_contact_name
            %tr
              %th Pickup contact email:
              %td.text-right= @setting.pickup_contact_email

            %tr
              %th New user URL:
              %td.text-right
                = "#{ root_url }sign_up?new_user_key=" + @setting.new_user_key

            %tr
              %th= link_to 'Edit', edit_setting_path(@setting)
              %td
