.container
  #clearance.password-reset
  %h2= t(".title")

  %p= t(".description")

  = form_for :password, url: passwords_path do |form|
    .text-field
      .form-group
        = form.label :email
        = form.text_field :email, type: 'email', class: 'form-control'

    .submit-field
      = form.submit 'Reset password', class: 'btn'